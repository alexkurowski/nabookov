<%= modal "remove_chapter" do %>
  <%= body do %>
    <%= illustration "trash" %>

    <%= title t "Delete Chapter?" %>

    <div class='small-text'><%= t "Are you sure you want to delete this chapter and all its text permanently?" %></div>
  <% end %>

  <%= footer do %>
    <div id='remove-chapter-submit' class='link'>
      <%= t "Delete" %>
    </div>
  <% end %>
<% end %>
